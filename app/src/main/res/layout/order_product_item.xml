<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/order_product_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/order_product_quantity_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Product" />

    <TextView
        android:id="@+id/order_product_quantity_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/order_product_x_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="999" />

    <TextView
        android:id="@+id/order_product_x_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/order_product_price_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=" x " />

    <TextView
        android:id="@+id/order_product_price_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/order_product_total_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="R$ 9,99" />

    <TextView
        android:id="@+id/order_product_total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="R$ 999,99" />


</androidx.constraintlayout.widget.ConstraintLayout>