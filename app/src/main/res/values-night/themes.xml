<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VendApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_900_dark</item>
        <item name="colorPrimaryVariant">@color/green_black</item>
        <item name="colorOnPrimary">@color/grey_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_900_dark</item>
        <item name="colorSecondaryVariant">@color/green_900_dark</item>
        <item name="colorOnSecondary">@color/grey_400</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>